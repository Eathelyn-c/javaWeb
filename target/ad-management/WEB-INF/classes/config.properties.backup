# Database Configuration
db.url=jdbc:mysql://localhost:3306/ad_management?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
db.username=root
db.password=your_password
db.driver=com.mysql.cj.jdbc.Driver

# Connection Pool Settings
db.pool.initialSize=5
db.pool.maxActive=20
db.pool.maxIdle=10
db.pool.minIdle=5

# JWT Configuration
jwt.secret=your_secret_key_change_this_in_production_min_256_bits_required
jwt.expiration=86400000

# File Upload Configuration
upload.directory=/uploads
upload.max.file.size=10485760
upload.max.request.size=20971520

# API Configuration
api.news.endpoint=https://api.news-platform.com/v1/publish
api.video.endpoint=https://api.video-platform.com/v1/publish
api.shopping.endpoint=https://api.shopping-platform.com/v1/publish
